<div class="row">
  <div class="col">
    <h1 class="text-center">All Group Reservations</h1>
    <hr />
    <%= form_tag new_group_tour_reservation_path, method: 'get' do %>
      <%= date_field params[:date], :date, value: Date.today %>
      <%= submit_tag "Group Reservatons", class: "btn  btn-primary mb-3 btn-block" %>
    <% end %>
    <table class="table">
      <%= paginate @group_tour_reservations %>
      <tr>
        <thead>
          <th>Name</th>
          <th>DATE</th>
          <th>GUIDE</th>
          <th>GUIDE PAY</th>
          <th>VEHICLE</th>
          <th>VEHICLE PAY</th>
          <th>Actions</th>
        </thead>
      </tr>
      <%= render @group_tour_reservations %>
    </table>

    <% if @group_tour_reservations.empty? %>
        <p>There are no <strong>Tours</strong> yet</p>
    <% end %>

    <%= paginate @group_tour_reservations %>
  </div>
</div>
<br />