
<tr>
  <tbody>
    <td><%= tour.name %></td>
    <td><%= number_to_currency(tour.ad_price, unit: " THB", format: "%n%u") %></td>
    <td><%= number_to_currency(tour.ch_price, unit: " THB", format: "%n%u") %></td>
    <td><%= number_to_currency(tour.add_ad_price, unit: " THB", format: "%n%u") %></td>
    <td><%= number_to_currency(tour.add_ch_price, unit: " THB", format: "%n%u") %></td>
    <td><%= number_to_currency(tour.add_chg, unit: " THB", format: "%n%u") %></td>
    <td>
      <div class="btn-group">
        <%= link_to "Edit", edit_tour_path(tour), class: "btn btn-outline-primary" %>
        <%= link_to "Delete", tour, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      </div>
    </td>
  </tbody>
</tr>

